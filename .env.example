# ===========================================
# DevPath - Environment Variables Template
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# Application
# ===========================================
NODE_ENV=development

# ===========================================
# Database (PostgreSQL)
# ===========================================
POSTGRES_USER=devpath
POSTGRES_PASSWORD=devpath_secret_change_me
POSTGRES_DB=devpath
POSTGRES_PORT=5432

# Full DATABASE_URL (used by Prisma)
DATABASE_URL=postgresql://devpath:devpath_secret_change_me@localhost:5432/devpath?schema=public

# ===========================================
# Redis
# ===========================================
REDIS_PASSWORD=redis_secret_change_me
REDIS_PORT=6379
REDIS_URL=redis://:redis_secret_change_me@localhost:6379

# ===========================================
# Backend API
# ===========================================
BACKEND_PORT=3001
API_PREFIX=api/v1

# ===========================================
# Frontend
# ===========================================
FRONTEND_PORT=5173
VITE_API_URL=http://localhost:3001/api/v1
VITE_ENABLE_AI_CHAT=true
VITE_ENABLE_ANALYTICS=false

# ===========================================
# JWT Authentication
# ===========================================
# Generate with: openssl rand -base64 32
JWT_ACCESS_SECRET=your-super-secret-access-key-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# ===========================================
# Email (Resend)
# ===========================================
# Get your API key from: https://resend.com
RESEND_API_KEY=re_xxxxxxxxxxxx
EMAIL_FROM=noreply@devpathlearn.com

# ===========================================
# AI Provider
# ===========================================
# Options: openai, groq, anthropic
AI_PROVIDER=groq

# OpenAI (if using)
OPENAI_API_KEY=sk-xxxxxxxxxxxx
OPENAI_MODEL=gpt-4o-mini

# Groq (if using)
GROQ_API_KEY=gsk_xxxxxxxxxxxx
GROQ_MODEL=llama-3.1-70b-versatile

# Anthropic (if using)
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxx
ANTHROPIC_MODEL=claude-3-haiku-20240307

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_TTL=60000
RATE_LIMIT_MAX=100

# AI Chat Quota (per user per day)
AI_QUOTA_FREE=10
AI_QUOTA_PRO=100

# ===========================================
# Monitoring & Logging
# ===========================================
# Sentry (Error Tracking)
SENTRY_DSN=https://xxxx@sentry.io/xxxx

# Log Level: debug, info, warn, error
LOG_LEVEL=debug

# ===========================================
# Development Tools (Docker)
# ===========================================
# pgAdmin
PGADMIN_EMAIL=admin@devpathlearn.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# Redis Commander
REDIS_COMMANDER_PORT=8081

# Mailhog (Email Testing)
MAILHOG_SMTP_PORT=1025
MAILHOG_UI_PORT=8025

# ===========================================
# Production Only
# ===========================================
# Domain
# DOMAIN=devpathlearn.com
# API_DOMAIN=api.devpathlearn.com

# SSL
# SSL_CERT_PATH=/etc/letsencrypt/live/devpathlearn.com/fullchain.pem
# SSL_KEY_PATH=/etc/letsencrypt/live/devpathlearn.com/privkey.pem
